<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_alerta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/color_listas"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >


        <TextView

            android:id="@+id/txt_descripcionAlerta"
            style="@style/txt_textoAlertas"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/A_nombre_alerta"
            android:layout_centerVertical="true">

        </TextView>

        <TextView

            android:id="@+id/txt_favoritaAlerta"
            style="@style/txt_textoNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RV_switchAlerta"
            android:layout_toRightOf="@id/txt_descripcionAlerta"
            android:text="Favorita">

        </TextView>

        <Switch
            android:id="@+id/RV_switchAlerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_descripcionAlerta"
            android:thumbTint="@color/App_color"></Switch>


    </RelativeLayout>

</androidx.cardview.widget.CardView>