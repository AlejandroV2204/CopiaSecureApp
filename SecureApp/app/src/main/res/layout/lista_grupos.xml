<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/color_listas"
    app:cardCornerRadius="1dp"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/RV_imagen_grupo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/escudoamerica">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView

            android:id="@+id/txt_nombreGrupo"
            style="@style/txt_textoNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/RV_imagen_grupo"
            android:layout_toRightOf="@id/RV_imagen_grupo"
            android:text="@string/DG_nombre_grupo_secundario"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:id="@+id/txt_descripcionGrupo"
            style="@style/txt_textoNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nombreGrupo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/RV_imagen_grupo"
            android:layout_toRightOf="@id/RV_imagen_grupo"
            android:text="@string/LG_descripcion">

        </TextView>

        <TextView

            android:id="@+id/txt_identificadorGrupo"
            style="@style/txt_textoNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nombreGrupo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/RV_imagen_grupo"
            android:layout_toRightOf="@id/RV_imagen_grupo"
            android:visibility="gone">

        </TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>