<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/color_listas"
    app:cardCornerRadius="1dp"
    android:outlineAmbientShadowColor="@color/App_color"
    android:outlineSpotShadowColor="@color/App_color"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >

        <ImageView

            android:id="@+id/RV_imagen_contacto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_contacto"
            android:layout_centerVertical="true">

        </ImageView>

        <TextView

            android:id="@+id/txt_nombreContacto"
            style="@style/txt_textoNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/RV_imagen_contacto"
            android:layout_toRightOf="@id/RV_imagen_contacto"
            android:text="@string/DC_nombre_contacto_secundario"
            android:textStyle="bold"
            android:layout_centerVertical="true">

        </TextView>

        <TextView

            android:id="@+id/txt_apellidoContacto"
            style="@style/txt_textoNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/txt_nombreContacto"
            android:layout_toRightOf="@id/txt_nombreContacto"
            android:text="@string/DC_nombre_contacto_secundario"
            android:textStyle="bold"
            android:layout_centerVertical="true">

        </TextView>

        <TextView

            android:id="@+id/txt_emailContacto"
            style="@style/txt_textoNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_apellidoContacto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/RV_imagen_contacto"
            android:layout_toRightOf="@id/RV_imagen_contacto"
            android:text="@string/LC_email"
            android:textColor="@color/Texto_color"
            android:visibility="gone">

        </TextView>

        <TextView

            android:id="@+id/txt_telefonoContacto"
            style="@style/txt_textoNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_emailContacto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/RV_imagen_contacto"
            android:layout_toRightOf="@id/RV_imagen_contacto"
            android:text="@string/LC_telefono"
            android:textColor="@color/Texto_color"
            android:visibility="gone">

        </TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>