<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/color_listas"
    app:cardCornerRadius="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        >

        <ImageView

            android:id="@+id/imagen_contacto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher">

        </ImageView>

        <TextView

            android:id="@+id/txt_nombreContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagen_contacto"
            android:layout_toRightOf="@id/imagen_contacto"
            android:text="@string/DC_nombre_contacto_secundario"
            android:textColor="@color/Texto_color"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:id="@+id/txt_apellidoContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/txt_nombreContacto"
            android:layout_toEndOf="@id/imagen_contacto"
            android:layout_toRightOf="@id/imagen_contacto"
            android:text="@string/DC_nombre_contacto_secundario"
            android:textColor="@color/Texto_color"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:id="@+id/txt_emailContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_apellidoContacto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagen_contacto"
            android:layout_toRightOf="@id/imagen_contacto"
            android:text="@string/LC_email"
            android:textColor="@color/Texto_color">

        </TextView>

        <TextView

            android:id="@+id/txt_telefonoContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_emailContacto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagen_contacto"
            android:layout_toRightOf="@id/imagen_contacto"
            android:text="@string/LC_telefono"
            android:textColor="@color/Texto_color">

        </TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>